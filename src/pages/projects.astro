---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Sistemas</div>
  </div>

  <HorizontalCard
    title="Sistema de Gestão"
    img="/post_img.webp"
    desc="Aplicativo de gestão com agendamento, serviços, e mais."
    url="#"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ERP Compartilhado"
    img="/post_img.webp"
    desc="Sistema ERP para gestão do seu negócio"
    url="#"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">APIs</div>
  </div>

  <HorizontalCard
    title="API fiscal"
    img="/post_img.webp"
    desc="API para informações e validações fiscais."
    url="#"
    badge="FOSS"
  />
  <div class="divider my-0"></div>
</BaseLayout>
